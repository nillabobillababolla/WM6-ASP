@model Category
@{
    ViewBag.Title = "Update Category";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="card">
            <div class="card-header">
                <h4>Kategori Güncelleme Formu</h4>
                <div class="text text-danger">@Html.ValidationSummary()</div>
            </div>
            <div class="card-block">
                @using (Html.BeginForm("Update", "Category", FormMethod.Post, new
                {
                    @class = "form-horizontal"
                }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(x => x.Id, new { @class = "col-md-3 control-label",hidden=true })
                        <div class="col-md-7">
                            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", placeholder = "Kategori Adi" })
                            <br /><span class="text-danger">@Html.ValidationMessageFor(x => x.CategoryName)</span>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.CategoryName, new { @class = "col-md-3 control-label" })
                        <div class="col-md-7">
                            @Html.DropDownListFor(x => x.CategoryName, (List<SelectListItem>)ViewBag.CategoryList, new { @class = "form-control", size = "1" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.TaxRate, new { @class = "col-md-3 control-label" })
                        <div class="col-md-7">
                            @Html.TextBoxFor(x => x.TaxRate, new { @class = "form-control", placeholder = "Kdv Oranı", type = "number", step = "1" })
                            <br /><span class="text-danger">@Html.ValidationMessageFor(x => x.TaxRate)</span>

                        </div>
                    </div>

                    <div class="form-group m-b-0">
                        <div class="col-md-9 col-md-offset-3">
                            <button class="btn btn-app" type="submit">Kategori Ekle</button>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>